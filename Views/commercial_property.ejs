  <script>
    function select() {
      var inp = document.getElementById("PropertyType").value;
      console.log(inp)
      if (inp == "Commercial Office Space") {
        if (!document.getElementById("showroom").classList.contains("d-none")) {
          document.getElementById("showroom").classList.add("d-none")
        }
        if (document.getElementById("extras").classList.contains("d-none")) {
          document.getElementById("extras").classList.remove("d-none")
        }
        document.getElementById("Office").classList.remove("d-none")
      }
      if (inp == "Commercial Showroom" || inp == "Commercial Shop") {
        if (!document.getElementById("Office").classList.contains("d-none")) {
          document.getElementById("Office").classList.add("d-none")
        }
        if (document.getElementById("extras").classList.contains("d-none")) {
          document.getElementById("extras").classList.remove("d-none")
        }
        document.getElementById("showroom").classList.remove("d-none")
      }
      if (inp == "Warehouse/Godows" || inp == "Industrial Shed") {
        if (!document.getElementById("extras").classList.contains("d-none")) {
          document.getElementById("extras").classList.add("d-none")
        }
      }
    }
    function washroomAvailible() {
      if (document.getElementById("WashroomisAvaliable").checked == true && document.getElementById("washroomQuantity").classList.contains("d-none")) {
        document.getElementById("washroomQuantity").classList.remove("d-none")
      }
      else {
        document.getElementById("washroomQuantity").classList.add("d-none")
      }
    }
    function liftAvailible() {
      if (document.getElementById("liftisAvaliable").checked == true && document.getElementById("liftQuantity").classList.contains("d-none")) {
        document.getElementById("liftQuantity").classList.remove("d-none")
      }
      else {
        document.getElementById("liftQuantity").classList.add("d-none")
      }
    }
    function Underconstruction() {
      document.getElementById("age").classList.add("d-none");
      document.getElementById("construction").classList.remove("d-none");
    }
    function Readyconstruction() {
      document.getElementById("age").classList.remove("d-none");
      document.getElementById("construction").classList.add("d-none");
    }
    function fixed() {
      document.getElementById("fixed").classList.remove("d-none")
      if (!document.getElementById("percentage").classList.contains("d-none")) {
        document.getElementById("percentage").classList.add("d-none")
      }
    }
    function percent() {
      document.getElementById("percentage").classList.remove("d-none")
      if (!document.getElementById("fixed").classList.contains("d-none")) {
        document.getElementById("fixed").classList.add("d-none")
      }
    }
  </script>
