<%- include('./layouts/imports') -%>
    <div class="uk-background-muted p-lg-4 p-2 ">
        <div class="container mt-4 ">
            <div class="d-flex w-100 justify-content-center mb-4">
                <h3>
                    100 Properties matching your preference
                </h3>
            </div>
            <div class="row">
                <div class="col-lg-4 d-none d-lg-block">
                    <div class="uk-background-default p-5 shadow rounded" style="top: 100px; position: sticky;">
                        <p class="text-center mb-4" style="font-weight: 600;"><span uk-icon="settings"></span>Filters
                        </p>
                        <form action="">
                            <label for="Range" class="text-center">Budget</label>
                            <input type="range" class="form-control-range" min="0" max="100" value="0" id="Range"
                                name="Range">
                            <output id="amount" name="amount" class="mb-2" for="Range">0</output>

                            <br>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="" id="rent">
                                <label class="form-check-label" for="rent">
                                    Rent
                                </label>
                            </div>

                            <br>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="" id="buy">
                                <label class="form-check-label" for="buy">
                                    Buy
                                </label>
                            </div>

                            <br>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="" id="furnished">
                                <label class="form-check-label" for="furnished">
                                    Furnished
                                </label>
                            </div>

                            <br>
                            <label for="builtUpArea">BuiltUp Area</label>
                            <div class="input-group">
                                <input type="text" id="builtUpArea"
                                    class="form-control border-top-0 border-left-0 border-right-0"
                                    name="builtUpArea"><span>
                                    <select name="builtUpArea"
                                        class="form-control border-top-0 border-left-0 border-right-0"
                                        class="form-control" id="builtUpArea">
                                        <option value="Sqft">Sqft</option>
                                        <option value="Acer">Acer</option>
                                        <option value="Sq-M">Sq-M</option>
                                    </select>
                                </span>
                            </div>
                            <br>
                            <br>
                            <div class="d-flex w-100 justify-content-center">
                                <button class="btn btn-outline-danger" type="submit">Apply</button>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="col-lg-8 col-12">
                    <div class="">
                        <% for(var i=0; i< 10; i++) {%>
                            <a href="#" style="text-decoration: none;">
                                <div class="card mb-4 rounded uk-card uk-card-hover" style="cursor: pointer;">
                                    <div class="row card-body">
                                        <div class="col-lg-4 col-12">
                                            <img src="https://images.pexels.com/photos/783745/pexels-photo-783745.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=650&w=940"
                                                alt="Img" height="500px">
                                        </div>
                                        <div class="col-lg-8 col-12 mt-lg-0 mt-4">
                                            <h3 class="mb-4">Ghar Ka Nam</h3>
                                            <div class="row">
                                                <div class="col-6 text-muted mb-1">Carpet Area<p>39sqm</p>
                                                </div>
                                                <div class="col-6 text-muted mb-1">Status<p>Under Construction</p>
                                                </div>
                                                <div class="col-6 text-muted mb-1">Transaction<p>New Property</p>
                                                </div>
                                                <div class="col-6 text-muted mb-1">Furnishing<p>Unfurnished</p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </a>
                            <% } %>
                                <nav aria-label="Page navigation example">
                                    <ul class="pagination justify-content-end">
                                        <li class="page-item disabled">
                                            <a class="page-link" href="#" tabindex="-1">Previous</a>
                                        </li>
                                        <% for(var i=1; i< 5; i++) {%>
                                        <li class="page-item"><a class="page-link text-danger" href="/search?page=<%= i %>"><%= i %></a></li>
                                        <% } %>
                                        <li class="page-item">
                                            <a class="page-link text-danger" href="#">Next</a>
                                        </li>
                                    </ul>
                                </nav>

                    </div>
                </div>
            </div>
            <a class="uk-button uk-button-default" href="#modal-full" uk-toggle> <button
                    class="rounded-circle btn btn-lg btn-dark d-lg-none d-block shadow font-weight-bold"
                    style="position: fixed; bottom: 15px; right: 15px;"><span uk-icon="settings"></span></button></a>
        </div>
    </div>

    <div id="modal-full" class="uk-modal-full" uk-modal>
        <div class="uk-modal-dialog" uk-height-viewport>
            <button class="uk-modal-close-full uk-close-large" type="button" uk-close></button>
            <div class="uk-grid-collapse uk-child-width-1-2@s uk-flex-middle" uk-grid>
                <div class="uk-padding-large">
                    <div class="">
                        <p class="text-center mb-4" style="font-weight: 600;"><span uk-icon="settings"></span>Filters
                        </p>
                        <form action="">
                            <label for="Range" class="text-center">Budget</label>
                            <input type="range" class="form-control-range" min="0" max="100" value="0" id="Range"
                                name="Range">
                            <output id="amount" name="amount" class="mb-2" for="Range">0</output>
    
                            <br>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="" id="rent">
                                <label class="form-check-label" for="rent">
                                    Rent
                                </label>
                            </div>
    
                            <br>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="" id="buy">
                                <label class="form-check-label" for="buy">
                                    Buy
                                </label>
                            </div>
    
                            <br>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="" id="furnished">
                                <label class="form-check-label" for="furnished">
                                    Furnished
                                </label>
                            </div>
    
                            <br>
                            <label for="builtUpArea">BuiltUp Area</label>
                            <div class="input-group">
                                <input type="text" id="builtUpArea"
                                    class="form-control border-top-0 border-left-0 border-right-0" name="builtUpArea"><span>
                                    <select name="builtUpArea"
                                        class="form-control border-top-0 border-left-0 border-right-0" class="form-control"
                                        id="builtUpArea">
                                        <option value="Sqft">Sqft</option>
                                        <option value="Acer">Acer</option>
                                        <option value="Sq-M">Sq-M</option>
                                    </select>
                                </span>
                            </div>
                            <br>
                            <br>
                            <div class="d-flex w-100 justify-content-center">
                                <button class="btn btn-outline-danger" type="submit">Apply</button>
                            </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script type="module" src="/js/searchPage.js"></script>
    <%- include('./layouts/Footer') -%>