<%- include('./layouts/imports') -%>

<section class="mt-5 mb-5">
    <div class="container">
        <!-- <p class="h1 text-center text-dark hammersmithOne">Dashboard</p> -->
        <!-- <hr class="uk-align-center hr-custom"> -->
        <div class="row">
            <div class="col-md-4 col-12">
                <div class="border rounded-lg shadow-sm uk-padding bg-white">
                    <p class="text-center h2 font-weight-bold hammersmithOne">Profile</p>
                    <br>
                    <div class="text-center"> 
                        <span uk-icon="icon: user; ratio: 3"></span>
                    </div> <br><br>
                    <div class="text-center">
                        <p class="text-capitalize">Name: <%= req.user.name  %> </p>
                        <p>Phone: <%= req.user.phone %> </p>
                        <p>Email: <%= req.user.email %> </p>
                        <a href="" class="text-light bg-dark p-1 rounded" uk-icon="icon: pencil; ratio: 1.5"></a>
                    </div>
                </div> <br>
                <div class="border rounded-lg shadow-sm uk-padding bg-white">
                    <p class="text-center h2 font-weight-bold hammersmithOne">Message US</p> <br>
                    <% if (messages.Success) { %>
                        <div class="uk-alert-success uk-width-auto" uk-alert>
                          <a class="uk-alert-close" uk-close></a>
                          <p class="text-center"><%= messages.Success %></p>
                        </div>
                      <% } %>
                    <form action="/user/addenquiry" method="POST">
                        <div class="form-group">
                          <label>Email address</label>
                          <input type="email" name="email" class="form-control form-control-lg" required>
                        </div>
                        <input type="hidden" name="page" value="dashboard">
                        <div class="form-group">
                            <label>Name</label>
                            <input name="name" class="form-control form-control-lg" required>
                        </div>
    
                        <div class="form-group">
                            <label>Contact Number</label>
                            <input name="contactno" class="form-control form-control-lg" pattern="[7-9]{1}[0-9]{9}" 
                            title="Enter A Phone Number" required>
                        </div>
    
                        <div class="form-group">
                            <label>Message (if any)</label>
                            <textarea class="form-control form-control-lg" rows="7"></textarea>
                        </div>
                        
                        <div class="text-center">
                            <button type="submit" class="btn btn-lg btn-danger rounded-pill pl-5 pr-5">Submit</button>
                        </div>
                    </form>
                </div>
                <br>
            </div>
            <div class="col-md-8 col-12">
                <div class="border rounded-lg shadow-sm uk-padding bg-white">
                    <p class="text-center h2 font-weight-bold hammersmithOne">Saved properties</p> <br>
                    <div class="row row-cols-1 row-cols-lg-2">
                        <% var i = 6 %> 
                          <% while  (i!=0) {%> 
                          <div class="col mb-4">
                            <div class="card h-100 p-2">
                              <img src="https://images.pexels.com/photos/584399/living-room-couch-interior-room-584399.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=650&w=940" class="card-img-top" alt="...">
                              <div class="card-body">
                                <a href="./property-detail" class="card-title text-danger h4 hammersmithOne">Card title</a>
                                <p class="card-text">This is a longer card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
                              </div>
                              <div class="card-footer">
                                  <small class="text-muted">Last updated 3 mins ago</small>
                                </div>
                            </div>
                          </div>
                        <% i = i-1 %> 
                        <% } %> 
                      </div>
                </div>
            </div>
        </div>
    </div>
</section>

<%- include('./layouts/Footer') -%>
