<%- include('./layouts/imports') -%>

<section class="mt-5 mb-5 p-3">
    <div class="uk-width-1-3@m uk-width-1-2@s uk-align-center border rounded-lg shadow-sm">
        <div class="p-lg-5 p-4 uk-grid-collapse">
            <div>
              <h2 class="text-center font-weight-bold hammersmithOne">Welcome Back!</h2>
              <div class="text-center" >
                <span uk-icon="icon: user; ratio: 3"></span>
              </div>
              <p class="text-center">Login to continue</p><br>
              <form method="POST" action="/user/login">
                  <div class="form-group">
                    <label>Email address</label>
                    <input type="email" name ="email" class="form-control" required>
                  </div>
                  <div class="form-group">
                    <label>Password</label>
                    <input type="password" name="password" class="form-control" required>
                  </div> <br>
                  <button type="submit" class="btn btn-primary w-100">Submit</button>
              </form>
              <a href="" class="form-text small text-muted mt-2">forgot password?</a>  
            </div>
            <hr>
            <p>Don't have account? <a href="/register" uk-toggle>Register here!</a></p>
        </div>
    </div>
</section>

<%- include('./layouts/Footer') -%>
