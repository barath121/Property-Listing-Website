<%- include('./layouts/imports') -%>

<section class="mt-5 mb-5 p-3">
    <div class="uk-width-1-3@m uk-width-1-2@s uk-align-center border rounded-lg shadow-sm">
        <div class="p-lg-5 p-4 uk-grid-collapse">
            <div>
              <% if (messages.error) { %>
                <div class="uk-alert-danger uk-width-auto" uk-alert>
                  <a class="uk-alert-close" uk-close></a>
                  <p class="text-center"><%= messages.error %></p>
                </div>
              <% } %>
              <h2 class="text-center font-weight-bold hammersmithOne">Welcome Back!</h2>
              <div class="text-center" >
                <span uk-icon="icon: user; ratio: 3"></span>
              </div>
              <p class="text-center">Login to continue</p><br>
              <form method="POST" action="/user/login">
                  <div class="form-group">
                    <label>Email address</label>
                    <input type="email" name ="email" class="form-control" required>
                  </div>
                  <div class="form-group">
                    <label>Password</label>
                    <input type="password" name="password" class="form-control" required>
                  </div> <br>
                  <button type="submit" class="btn btn-primary w-100">Submit</button>
              </form>
              <a href="" class="form-text small text-muted mt-2" data-toggle="modal" data-target="#forgotPassword">forgot password?</a> 

              <div class="modal fade" id="forgotPassword" data-backdrop="static" data-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                <div class="modal-dialog">
                  <div class="modal-content">
                    <div class="modal-header">
                      <h5 class="h4" id="staticBackdropLabel">Forgot Password</h5>
                      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                      </button>
                    </div>
                    <div class="modal-body">
                      <form action="" method="POST">
                        <div>
                          <label for="password1">Old Password</label>
                          <input type="password" class="form-control" name="oldpassword" id="password">
                        </div>
                        <br>
                        <div>
                          <label for="password1">New Password</label>
                          <input type="password" class="form-control" name="newpassword" id="password">
                        </div>
                        <br>
                        <div class="text-right">
                            <button type="button" class="btn btn-success">Submit</button>
                        </div>
                      </form>
                      <p>Don't have account? <a href="/register" uk-toggle>Register here!</a></p>
                    </div>
                  </div>
                </div>
              </div> 
            </div>
            <hr>
            <p>Don't have account? <a href="/register" uk-toggle>Register here!</a></p>
        </div>
    </div>
</section>

<%- include('./layouts/Footer') -%>
