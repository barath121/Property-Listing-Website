<%- include('./layouts/imports') -%>

<!-- header -->
<header class="header-bg">
    <div class="content-bg">
        <div class="container">
          <p class="text-center display-4 font-weight-bold text-warning hammersmithOne">KUCH TOH HEADING</p>
          <p class="text-center text-white">Lorem ipsum dolor sit amet consectetur adipisicing elit. </p>
          <div class="uk-align-center rounded-lg p-4 " style="background-color: rgba(0,0,0,0.6);">
            <form action="/search" method="GET">
            <div class="form-group uk-width-1-6@m uk-width-1-3@s ml-sm-3 uk-inline-clip">
              <label for="exampleFormControlSelect1" class="text-warning">Location</label>
              <select class="form-control bg-transparent text-light font-weight-bold" id="exampleFormControlSelect1">
                <option class="text-dark">Roadpali</option>
                <option class="text-dark">Kalamboli</option>
                <option class="text-dark">Kharghar</option>
              </select>
            </div>
            <div class="form-group uk-width-1-6@m uk-width-1-3@s ml-sm-3  uk-inline-clip">
              <label for="exampleFormControlSelect1" class="text-warning">Property Type</label>
              <select class="form-control bg-transparent text-light font-weight-bold" id="exampleFormControlSelect1">
                <option class="text-dark">1</option>
                <option class="text-dark">2</option>
                <option class="text-dark">3</option>
                <option class="text-dark">4</option>
                <option class="text-dark">5</option>
              </select>
            </div>
            <div class="form-group uk-width-1-6@m uk-width-1-3@s ml-sm-3 uk-inline-clip">
              <label for="exampleFormControlSelect1" class="text-warning">Bedroom</label>
              <select class="form-control bg-transparent text-light font-weight-bold" id="exampleFormControlSelect1">
                <option class="text-dark">1 BHK</option>
                <option class="text-dark">2 BHK</option>
                <option class="text-dark">3 BHK</option>
                <option class="text-dark">>4 BHK</option>
              </select>
            </div>
            <div class="form-group uk-width-1-6@m uk-width-1-3@s ml-sm-3  uk-inline-clip">
              <label for="exampleFormControlSelect1" class="text-warning">Bathroom</label>
              <select class="form-control bg-transparent text-light font-weight-bold" id="exampleFormControlSelect1">
                <option class="text-dark">1</option>
                <option class="text-dark">2</option>
                <option class="text-dark">3</option>
                <option class="text-dark">>3</option>
              </select>
            </div>
            <div class="form-group uk-width-1-6@m uk-width-1-3@s ml-sm-3  uk-inline-clip">
              <label for="exampleFormControlSelect1" class="text-warning">Budget</label>
              <select class="form-control bg-transparent text-light font-weight-bold" id="exampleFormControlSelect1">
                <option class="text-dark">1</option>
                <option class="text-dark">2</option>
                <option class="text-dark">3</option>
                <option class="text-dark">>3</option>
              </select>
            </div>
            <button class="btn btn-danger uk-width-auto@s uk-width-1-1 ml-sm-3"><span class="p-1" uk-icon="search"></span></button>
          </form>
          </div>
        </div>
        <!-- </div> -->
    </div>
</header>

<!-- Property gallery -->
<section class="pt-5 pb-5 bg-light">
    <div class="container">
        <p class="h1 text-center text-dark hammersmithOne">Property Gallery</p>
        <hr class="uk-align-center hr-custom">
        <div class="row row-cols-1 row-cols-md-3">
          <% var i = 6 %> 
            <% while  (i!=0) {%> 
            <div class="col mb-4">
              <div class="card h-100 shadow p-2">
                <img src="https://images.pexels.com/photos/584399/living-room-couch-interior-room-584399.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=650&w=940" class="card-img-top" alt="...">
                <div class="card-body">
                  <a href="./property-detail" class="card-title text-danger h4 hammersmithOne">Card title</a>
                  <p class="card-text">This is a longer card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
                </div>
                <div class="card-footer">
                    <small class="text-muted">Last updated 3 mins ago</small>
                  </div>
              </div>
            </div>
          <% i = i-1 %> 
          <% } %> 
        </div>
        <div class="text-center m-5">
          <a href="" class="btn btn-lg btn-outline-danger font-weight-bold rounded-pill">More Properties</a>
        </div>
    </div>
</section>

